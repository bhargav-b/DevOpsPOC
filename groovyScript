echo 'DevOpsPOC'

node {
  git url: 'https://github.com/bhargav-b/DevOpsPOC.git'
  def mvnHome = tool 'Maven'
  // bat "${mvnHome}\\bin\\mvn -B verify"
  bat "test.bat" // in this batch file, we will be going to the project directory executing the Java project through maven goal 
  bat "install.bat" // this will runs a maven install goal to generate an artifact
  step([$class: 'ArtifactArchiver', artifacts: '**/target/*.war', fingerprint: true])
}
